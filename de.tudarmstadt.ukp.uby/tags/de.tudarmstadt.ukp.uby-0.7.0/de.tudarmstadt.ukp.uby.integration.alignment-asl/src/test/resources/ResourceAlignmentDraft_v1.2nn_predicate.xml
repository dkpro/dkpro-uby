      </scoretype>
    </scoretypes>
    <decisiontypes>
      <decisiontype id="ferretdecision" type="manual">
        <name>Head ferret</name>
        <description>Based on head ferret scores with a threshold of 0.5</description>
      </decisiontype>
    </decisiontypes>
